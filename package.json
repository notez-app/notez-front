{
  "name": "@notez/front",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --stream",
    "build": "lerna run build --stream",
    "start": "lerna run start --stream",
    "test": "lerna run test --stream",
    "format": "prettier --write packages/**/*.js"
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "lerna": "^3.16.4",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "pretty-quick --staged"
    }
  }
}
